{
	"$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
	"env": {
		"LC_ALL": "en_US.UTF-8",
		"PATH": "$DEVBOX_PROJECT_ROOT/.local/share/coursier/bin/:${PATH}",
		"COURSIER_BIN_DIR": "$DEVBOX_PROJECT_ROOT/bin/coursier/",
	},
	"packages": [
		"coursier@latest",
		"jdk@17.0.12",
		"meld@latest",
	],
	"shell": {
		"init_hook": [
			"source <(devbox completion zsh)",
		],
		"scripts": {
			"test": [
				"echo \"Error: no test specified\" && exit 1",
			],
		},
	},
}
